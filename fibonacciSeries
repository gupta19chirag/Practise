// A program to print the fibonacci series:
#include<stdio.h>
#include<conio.h> // Only if you use turbo c++ compiler
void main()
{
int a=0,b=1,n,i,c;
clrscr();
printf("Enter the number of terms:\n");
scanf("%d",&n);
if(n==0){
printf("\nEnter the valid number:\n");// I am taking the digits starting from 1 index:
}
else if(n==1){
printf("%d",a);
}
else{
printf("%d ",a);
c = a + b;
a = b;
b = c;
}
getch();// Its just used in turbo c++ to hold the screen.
}
